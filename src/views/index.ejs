    <link rel="stylesheet" href="todo.css">
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <title><%=title%></title>
    <style>
    .navtxt{
    margin-left: 180px;
  }

  .banner{ 
    height: 100vh;
    width: 100%;
    background: url(/images/mainbgm.jpg);
    background-position: top;
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
  }
  .banner .navbar{
    margin-top: 1%;

  }
  .banner .navbar-brand{
    color:cornflowerblue; 
    font-size: 1.7em;
    font-weight: 700;
    margin-left: 10%;
  }
  .banner .nav{
    margin-right: 20%;
  }
  .banner .nav li a:hover{
    background-color: rgb(30, 30, 54);
  }
  .banner .nav li a{
    color: #cebbbbc4;
    font-size: 1.2em;
  }
  .banner .info{
    margin-top: 9%;
    transform: translateY(-9%);
  }
  .banner .info h1{
    font-size: 2.5em;
    font-weight: 700;
    letter-spacing: 2px;
    color: darkkhaki;
  }
    </style>

</head>
<body class="main-body">
<!-- Main Page Contents Here -->
<div class="container-fluid banner">
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <h2 style="color: cornflowerblue;">My Library</h2>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav navtxt">
                <%for(i=0;i<nav.length;i++){%>
              <li class="nav-item">
                <a href="<%=nav[i].link%>"><%=nav[i].name%></a>
              </li>
              <%}%>
            </ul>
          </div>
        </div>
      </nav>
      </div>
    <div class="col-md-8 offset-md-2 mt-5 info">
      <h1 class="text-center">Welcome to Library Application</h1>
