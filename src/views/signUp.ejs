<!-- sign up page -->
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/2b27a57f1c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/signUp.css">
    <script async src="/js/signUp.js"></script>
    <title> Sign Up Page </title>
</head>
<body class="signup-body">
    <!-- Navbar Starts Here -->
    <!-- Navbar Ends Here -->

    <!-- Sign Up Form Starts Here -->
    <Section>
      <div class="container">
        <br>
        <% if(error!=''){%>
          <div class="alert alert-danger" role="alert">
            <%=error%>
          </div>
          <%}%>
          
        <div class="row">
          
          <div class="col-md-3"></div>
          <div class="col-auto">
            <div class=" ui text-white p-3 m-3 text-center">
              <span >
                  <h3>Registration Form <i class="bi bi-pen"></i></h3> 
                </span>
                <br>
              <form class="form-group signUp-form" id="signUp-form" action="/signUp/registerUser" method="POST" autocomplete="off">
                <div class="d-flex justify-content-around">
                  <div class="form-group col-md-6 signUp-form-control">
                    <label for="fname"><i class="bi bi-person"></i>Username</label>
                    <input type="text" class="form-control" id="fname" placeholder="Username" name="username">
                    <!-- The following are the icons used in form-validation -->
                    <i class="far fa-check-circle valid-icon"></i>
                    <i class="fas fa-exclamation-circle valid-icon"></i>
                    <small id="emailHelp" class="form-text"> Field is Empty.</small>
                    <!--End of Validation icons & text  -->
                  </div> 
                  <div class="form-group col-md-6 signUp-form-control">
                    <label for="lname"><i class="bi bi-person"></i>Name</label>
                    <input type="text" class="form-control" id="lname" placeholder="Name" name="name">
                    <!-- The following are the icons used in form-validation -->
                    <i class="far fa-check-circle valid-icon"></i>
                    <i class="fas fa-exclamation-circle valid-icon"></i>
                    <small id="emailHelp" class="form-text"> Field is Empty.</small>
                    <!--End of Validation icons & text  -->
                  </div>
                </div>
                
                <div class="form-group signUp-form-control">
                  <label for="inputEmail"><i class="bi bi-envelope"></i>Email</label>
                  <input type="email" class="form-control" id="inputEmail" placeholder="Email" autocomplete="off" name="email">
                    <!-- The following are the icons used in form-validation -->
                    <i class="far fa-check-circle valid-icon"></i>
                    <i class="fas fa-exclamation-circle valid-icon"></i>
                    <small id="emailHelp" class="form-text">Email field is Empty.</small>
                    <!--End of Validation icons & text  -->

                </div>
                
                <div class="d-flex justify-content-around ">
                  <div class="form-group col-md-6 signUp-form-control">
                    <label for="inputpass1"><i class="bi bi-key"></i> Password</label>
                    <input type="password" class="form-control" id="inputpass1" placeholder="Password"name="Pass">
                    <!-- The following are the icons used in form-validation -->
                    <i class="far fa-check-circle valid-icon"></i>
                    <i class="fas fa-exclamation-circle valid-icon"></i>
                    <small id="emailHelp" class="form-text">Password field is Empty.</small>
                    <!--End of Validation icons & text  -->
                    <div class="password-toggle">
                      <i class="fas fa-eye"></i>
                      <i class="fas fa-eye-slash"></i>
                    </div>

                  </div>
                  <div class="form-group col-md-6 signUp-form-control">
                    <label for="inputPassword4"><i class="bi bi-key"></i> Re-Type Password</label>
                    <input type="password" class="form-control" id="inputPass2" placeholder="Re-Type Password" name="RePass">
                    <div class="password-toggle-two">
                      <i class="fas fa-eye"></i>
                      <i class="fas fa-eye-slash"></i>
                    </div>
                    <!-- The following are the icons used in form-validation -->
                    <i class="far fa-check-circle valid-icon"></i>
                    <i class="fas fa-exclamation-circle valid-icon"></i>
                    <small id="emailHelp" class="form-text">Password field is Empty.</small>
                    <!--End of Validation icons & text  -->
                  </div>
                </div>
                <div class="d-flex justify-content-around">
                  <div class="form-group col-md-6 signUp-form-control">
                    <label for="inputMob"><i class="bi bi-phone"></i> Mobile Number</label>
                    <input type="text" class="form-control" id="inputMob" placeholder="Enter Mobile Number" name="mob">
                    <!-- The following are the icons used in form-validation -->
                    <i class="far fa-check-circle valid-icon"></i>
                    <i class="fas fa-exclamation-circle valid-icon"></i>
                    <small id="emailHelp" class="form-text"> Field is Empty.</small>
                    <!--End of Validation icons & text  -->
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputGender"><i class="bi bi-person-circle"></i> Gender</label>
                    <select id="inputGender" class="form-control">
                      <option selected>Choose Gender</option>
                      <option>Female</option>
                      <option>Male</option>
                      <option>Others</option>
                    </select>
                    <small id="emailHelp" class="form-text"> Please select Gender.</small>
                  </div>
                  
                </div>
                <div class="form-group col-auto">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" name="gender">
                    <label class="form-check-label" for="gridCheck">
                      Remember Me
                    </label>
                  </div>
                  
                </div>
                <button type="submit" class="btn btn-secondary btn-block">Sign in</button>
                <label for="signlink" class="text-warning"> Already have an account? </label>
                <a class="text-success" href="/login"> Login Here</a>
              </form>
            </div>
          </div>

          <div class="col-md-3"></div>

         
        </div>
      </div>
    </Section>
    <!-- Sign Up Form Ends Here -->

    <!-- Footer Starts Here -->
  <!-- Footer Ends Here -->
</body>
</html>